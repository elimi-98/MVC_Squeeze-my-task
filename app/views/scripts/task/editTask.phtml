                    <option <?php echo ($this->tasks['status'] === 'cc') ? 'selected' : ''; ?>>Pending</option>
                    <option <?php echo ($this->tasks['status'] === 'Running') ? 'selected' : ''; ?>>Running</option>
                    <option <?php echo ($this->tasks['status'] === 'Completed') ? 'selected' : ''; ?>>Completed</option>
                </select>
            </div>

